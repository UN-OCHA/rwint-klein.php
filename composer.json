{
  "name": "unocha/klein",
  "description": "A lightning fast router for PHP",
  "keywords": ["router", "routing", "sinatra", "boilerplate"],
  "homepage": "https://github.com/UN-OCHA/rwint-klein.php",
  "license": "MIT",
  "authors": [
   {
     "name": "Chris O'Hara",
     "email": "cohara87@gmail.com",
     "homepage": "http://chris6f.com/",
     "role": "Creator/Developer"
   },
   {
     "name": "Trevor Suarez",
     "email": "rican7@gmail.com",
     "homepage": "https://trevorsuarez.com/",
     "role": "Contributor/Developer"
   }
  ],
  "require": {
   "php": ">=8.5"
  },
  "require-dev": {
   "phpunit/phpunit": "^11.5",
   "phpunit/php-code-coverage": "^11.0",
   "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
   "psr-4": {
     "Klein\\": "src/Klein/"
   }
  },
  "autoload-dev": {
   "psr-4": {
     "Klein\\Tests\\": "tests/Klein/Tests"
   }
  },
  "scripts": {
    "post-install-cmd": [
      "@git-hooks"
    ],
    "post-update-cmd": [
      "@git-hooks"
    ],
    "git-hooks": "test -d .git && git config core.hooksPath git-hooks || exit 0",
    "test": "./vendor/bin/phpunit",
    "lint": "./vendor/bin/phpcs --standard=phpcs.xml -p src/ tests/"
  }
}
